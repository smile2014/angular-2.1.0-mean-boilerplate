{
  "name": "boilerplate-mean",
  "version": "0.0.1",
  "scripts": {
    "build-backend": "grunt clean:backend && grunt tslint:backend && grunt ts:backend",
    "build-frontend": "grunt clean:frontend && grunt tslint:frontend && grunt ts:frontend",
    "build-sass": "grunt clean:sass && grunt scsslint:main && grunt sass:main",
    "build": "concurrently \"npm run build-backend\" \"npm run build-frontend\" \"npm run build-sass\"",
    "sequential-build": "grunt clean && grunt tslint && grunt scsslint && grunt ts && grunt sass:main",

    "test-backend": "grunt ts:backend && grunt mochaTest:backend --env=test",
    "test": "npm run test-backend",

    "cover-backend": "grunt ts:backend && grunt mocha_istanbul:backend --env=test",
    "cover": "npm run cover-backend",

    "start": "concurrently \"grunt watch:backend\" \"grunt watch:frontend\" \"grunt watch:sass\" \"nodemon server.js --watch app/js/\"",
    "dev": "npm run build && npm run start",
    "prod": "grunt clean && grunt ts && grunt sass:main && node server.js"
  },
  "description": "Mean Boilerplate",
  "dependencies": {
    "@angular/common": "2.0.0-rc.2",
    "@angular/compiler": "2.0.0-rc.2",
    "@angular/core": "2.0.0-rc.2",
    "@angular/http": "2.0.0-rc.2",
    "@angular/platform-browser": "2.0.0-rc.2",
    "@angular/platform-browser-dynamic": "2.0.0-rc.2",
    "@angular/router": "2.0.0-rc.2",
    "@angular/router-deprecated": "2.0.0-rc.2",
    "body-parser": "^1.13.3",
    "compression": "^1.5.2",
    "connect-mongo": "^1.2.0",
    "cookie-parser": "^1.4.3",
    "core-js": "^2.4.0",
    "express": "^4.13.4",
    "express-session": "^1.13.0",
    "glob": "^6.0.4",
    "method-override": "^2.3.0",
    "mongoose": "^4.1.2",
    "morgan": "^1.6.1",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^4.0.0",
    "reflect-metadata": "^0.1.3",
    "rxjs": "5.0.0-beta.6",
    "sendevent": "^1.0.4",
    "serve-favicon": "^2.3.0",
    "systemjs": "0.19.27",
    "watch": "^0.17.1",
    "zone.js": "^0.6.12"
  },
  "devDependencies": {
    "codelyzer": "0.0.22",
    "concurrently": "^2.0.0",
    "fs-readdir-recursive": "^1.0.0",
    "grunt": "^1.0.1",
    "grunt-contrib-clean": "^1.0.0",
    "grunt-contrib-watch": "^1.0.0",
    "grunt-mocha-istanbul": "^3.0.1",
    "grunt-mocha-test": "^0.12.7",
    "grunt-sass": "^1.2.0",
    "grunt-scss-lint": "^0.3.8",
    "grunt-ts": "^5.3.2",
    "grunt-tslint": "^3.0.3",
    "istanbul": "^0.4.2",
    "mocha": "^2.4.5",
    "node-sass": "^3.7.0",
    "nodemon": "^1.9.1",
    "supertest": "^1.2.0",
    "tslint": "^3.6.0",
    "typescript": "^1.7.5",
    "typings": "^0.6.8"
  }
}
